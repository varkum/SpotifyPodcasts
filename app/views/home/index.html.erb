<div class="mx-4">
    <h2 class="font-bold text-2xl my-4">
        Continue Listening
    </h2>

    <div class="flex overflow-scroll flex-nowrap">
        <% @in_progress.each do |episode| %>
            <%= render partial: "episodes/episode", locals: {episode: episode} %>
        <% end %>
    </div>

     <h2 class="font-bold text-2xl lg:my-4 mt-8">
        Up Next
    </h2>

    <div class="flex overflow-scroll flex-nowrap">
        <% @up_next.each do |episode| %>
            <%= render partial: "episodes/episode", locals: {episode: episode} %>
        <% end %>
    </div>
</div>


