
<div class="shrink-0 flex flex-col lg:w-52 w-32 mx-4" data-controller="episode" >
    <div class="relative" data-action="mouseover->episode#playHover mouseleave->episode#exitHover">
            <div class="w-full z-10 absolute top-1/2 hidden justify-center" data-episode-target="quickPlayBtn">
                <%= button_to episode_path(episode.id, episode: {last_played: DateTime.now()}, format: 'html'), method: :patch, class: "contents", data: {turbo: false} do %>
                    <i class="fa-solid fa-play text-green-500 text-4xl cursor-pointer mr-4" ></i>
                <% end %>
                <% unless episode.youtube_id.blank?%>
                    <%= button_to episode_path(episode.id, episode: {last_played: DateTime.now()}, format: 'html', play_source: "yt"), method: :patch, class: "contents", data: {turbo: false} do %>
                        <i class="fa-brands fa-youtube text-red-500 text-4xl cursor-pointer" ></i>
                    <% end %>
                <% end %>
                
                
            </div>
       
        
        <div class="z-0" data-episode-target="img">
            <img src="<%= episode.image%>" alt="profile" class="lg:w-52 lg:h-52 w-32 h-32 rounded"  />
        </div>
    </div>
    
    <div class="text-center inline-block">
        <h3 class="text-ellipses">
            <%= episode.name%>
        </h3>
        <h4 class="text-sm mt-1 text-slate-400">
            <%= episode.show%>
        </h4>
    </div>
</div>

