<div class="shrink-0 flex flex-col w-52 mr-16" data-controller="episode" >
    <img src="<%= episode.image%>" alt="profile" width="200" height="200" class="rounded" data-episode-target = "episode" data-action="mouseover->episode#playHover"/>
    <div class="text-center inline-block">
        <h3 class="text-ellipses">
            <%= episode.name%>
        </h3>
        <h4 class="text-sm mt-1 text-slate-400">
            <%= episode.show%>
        </h4>
    </div>
</div>
