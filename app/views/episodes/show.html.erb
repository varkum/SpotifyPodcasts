<div class="w-full flex flex-col items-center">
    <div class="my-8 text-center">
        <h2 class="text-3xl font-bold"><%= @episode.name%></h2>
        <h3 class="text-2xl text-gray-500"><%=@episode.show%></h3>
    </div>
    <div data-controller="youtube" data-youtube-target = "display" data-youtube-youtube-id-value = "<%= @episode.youtube_id.partition('=').last %>" data-youtube-start-position-value = "<%= (@episode.duration - @episode.progress)/1000 %>">
    </div>
</div>

